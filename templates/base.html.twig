<!DOCTYPE html>
<html>
	<head>
		<meta charset="UTF-8">
		<meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
		<title>
			{% block title %}Youtube-video
			{% endblock %}
		</title>
		{# Run `composer require symfony/webpack-encore-bundle` to start using Symfony UX #}
		{% block stylesheets %}
			{# CDN Bootstrap #}
			<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
		{% endblock %}
	</head>
	<body>
		<header>
			<nav class="navbar navbar-expand-lg navbar-dark bg-dark">
				<div class="container-fluid">
					<a class="navbar-brand" href="#">YtubeVideo</a>
					<button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
						<span class="navbar-toggler-icon"></span>
					</button>
					<div class="collapse navbar-collapse" id="navbarNav">
						<ul class="navbar-nav">
							<li class="nav-item">
								<a class="nav-link active" aria-current="page" href="{{ path('index') }}">Home</a>
							</li>
							<li class="nav-item">
								<a class="nav-link" href="{{ path('index') }}">Add video</a>
							</li>
							<li class="nav-item">
								<a class="nav-link" href="{{ path('index') }}">About</a>
							</li>
						</ul>
					</div>
				</div>
			</nav>
		</header>
		<main class="container"> {% block body %}{% endblock %}
			</main>

			<footer>
				<div class="text-center p-4">
					&copy; Copyright
					{{ 'now'|date('Y') }}
					&middot;
					<a class="text-reset fw-bold" href="{{ path('index') }}">Notre mission</a>
				</div>
			</footer>

			{% block javascripts %}
				<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
			{% endblock %}
		</body>
	</html>
